{
  "name": "atomic-site-audit",
  "version": "1.0.0",
  "description": "Modular site audit tool for checking SEO, performance, and other metrics.",
  "main": "cli.js",
  "scripts": {
    "audit": "node cli.js",
    "lint": "standard --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": ["seo", "audit", "performance", "website", "puppeteer"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0",
    "commander": "^11.1.0",
    "puppeteer": "^22.15.0",
    "lighthouse": "^11.7.1",
    "html-validator": "^6.0.1",
    "chrome-launcher": "^1.1.2",
    "broken-link-checker": "latest",
    "fast-xml-parser": "latest",
    "robots-parser": "latest",
    "structured-data-testing-tool": "latest",
    "cspell-lib": "latest"
  },
  "devDependencies": {
    "standard": "^17.1.2",
    "jest": "latest"
  },
  "type": "module",
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": ["src/**/*.js", "checks/**/*.js"],
    "coverageDirectory": "coverage"
  }
}